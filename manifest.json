{
  "manifest_version": 3,
  "name": "Conventional Comments",
  "description": "Adds conventional comment shortcuts to the comment editor.",
  "version": "1.6.0",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["style.css"],
      "js": ["build/index.js"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
